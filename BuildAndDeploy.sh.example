#!/bin/bash

# Variables
IMAGE_URI=XXX
CLUSTER_NAME="XXX"
SERVICE_NAME="XXX"
REGION="eu-west-3"

echo "Connect to aws cli"
aws ecr get-login-password --region eu-west-3 | docker login --username AWS --password-stdin XXX

# Build
echo "üõ†Ô∏è  Build Docker image..."
